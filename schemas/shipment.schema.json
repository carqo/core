{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://carqo.org/schemas/shipment.schema.json",
  "title": "Shipment",
  "type": "object",
  "required": ["reference", "events", "cargo"],
  "properties": {
    "reference": {
      "type": "string",
      "description": "Unique reference identifier for this shipment."
    },
    "events": {
      "type": "array",
      "description": "A list of events for this shipment.",
      "items": {
        "$ref": "event.schema.json"
      },
      "minItems": 1
    },
    "cargo": {
      "$ref": "cargo.schema.json",
      "description": "The cargo for this shipment."
    }
  },
  "additionalProperties": true
}
