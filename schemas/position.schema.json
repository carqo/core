{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://carqo.org/schemas/position.schema.json",
  "title": "Position",
  "type": "object",
  "required": ["latitude", "longitude"],
  "properties": {
    "latitude": {
      "type": "number",
      "description": "Latitude in decimal degrees.",
      "minimum": -90,
      "maximum": 90,
      "multipleOf": 0.000001
    },
    "longitude": {
      "type": "number",
      "description": "Longitude in decimal degrees.",
      "minimum": -180,
      "maximum": 180,
      "multipleOf": 0.000001
    },
    "name": {
      "type": "string",
      "description": "Optional human-readable name for this position."
    },
    "address": {
      "$ref": "address.schema.json",
      "description": "Optional detailed address for this position."
    }
  },
  "additionalProperties": true
}
