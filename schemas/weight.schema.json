{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://carqo.org/schemas/weight.schema.json",
  "title": "Weight",
  "type": "object",
  "required": ["value", "unit"],
  "properties": {
    "value": {
      "type": "number",
      "minimum": 0.0001,
      "description": "Numeric weight value."
    },
    "unit": {
      "type": "string",
      "pattern": "^[A-Z]+$",
      "description": "Weight unit in uppercase letters (e.g. KG, LB, GRAM, TON)."
    }
  },
  "additionalProperties": true
}
